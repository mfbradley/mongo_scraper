<div id="container">

    <!-- NavBar -->
    <!-- Includes links to Home page, Saved Articles Page, and a 'Scrape for New Articles' button -->
    <ul class="nav">
        <li class="nav-item">
            <a class="navbar-brand" href="#">Mongo Scraper</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link savedArticlesPage" href="/articles/saved">Saved Articles</a>
        </li>
        <li class="nav-item">
            <button class="btn btn-secondary scraperButton" type="submit" href="/">Scrape for New Articles</button>
        </li>
    </ul>

    <!-- Jumbotron -->
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Mongo Scraper</h1>
            <p class="lead">TIME Edition</p>
        </div>
    </div>
</div>

<!-- Empty article div to scrape articles into -->
<div id="articleDiv" class="container-fluid">
    {{#each articles}}
    <div class='card text-white bg-info mb-3'>
        <div class='card-header'>
            <h3 class='title' href={{this.link}}>{{this.title}}</h3>
            <br />
            <div class='card-body bg-light mb-3'>
                <p class='card-text'>{{this.summary}}
                </p>
                <button href="#" class="btn btn-secondary saveArticle" data-id={{this._id}}>Save Article</button>
            </div>
        </div>
    </div>
    {{/each}}
</div>